@{
    ViewData["Title"] = "Werknemer Verwijderen";
}
@model List<ASP.Models.WerknemerViewModel>

<div style="margin: 0px;height: 316px;margin-top: 51px;margin-left: 50px;">
    <p style="width: 794px;margin-bottom: 0px;margin-left: 34px;">Kies een Werknemer.</p>
    <select id="drop-verwijderen" style="margin-top: 16px;margin-left: 32px;width: 164px;height: 36px;">
        <optgroup label="Werknemers">
            @foreach (WerknemerViewModel werknemer in Model)
            {
                <option value="@werknemer.WerknemerID">@werknemer.Naam</option>
            }
        </optgroup>
    </select>
    <button id="buttonwerknemerverwijderen" class="btn btn-primary" type="button" style="margin-left: 30px;width: 130px;background: rgb(51,51,51);">Verwijderen</button>
</div>
